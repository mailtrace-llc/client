# === Flask / App ===
FLASK_APP=app:create_app
FLASK_ENV=development                 # change to 'production' in prod
DISABLE_AUTH=1                        # 1 = bypass login for local dev; set 0 in prod
SECRET_KEY=change_me_in_local_env
APP_BASE_URL=http://127.0.0.1:5000

# === Database (dev/CI/prod parity = Postgres in Docker) ===
# Dev container maps host 5433 -> container 5432
DATABASE_URL=postgresql+psycopg://mailtrace:devpass@localhost:5433/mailtrace
SQLALCHEMY_DATABASE_URI=${DATABASE_URL}

# === Vite / Frontend ===
# VITE_API_BASE=https://api-dev.mailtrace-llc.com/api
VITE_API_BASE=/api
# Optional shared-secret header for your dev tunnel
VITE_API_TOKEN=changeme-long-random

# === Auth (leave blank in dev if DISABLE_AUTH=1) ===
# AUTH0_DOMAIN=your-tenant.us.auth0.com
# AUTH0_CLIENT_ID=
# AUTH0_CLIENT_SECRET=
# AUTH0_CALLBACK_URL=http://127.0.0.1:5000/callback      # use https://app.example.com/callback in prod
# AUTH0_LOGOUT_URL=http://127.0.0.1:5000/                # use your public app URL in prod

